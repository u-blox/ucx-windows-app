<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:UcxAvaloniaApp.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
        x:Class="UcxAvaloniaApp.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="UCX Avalonia Test App"
        Width="900" Height="650">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>

    <Grid RowDefinitions="Auto,*" Margin="10">
        <!-- Connection Panel -->
        <Border Grid.Row="0" BorderBrush="Gray" BorderThickness="1" CornerRadius="5" Padding="10" Margin="0,0,0,10">
            <StackPanel>
                <TextBlock Text="Connection" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>
                
                <Grid ColumnDefinitions="Auto,*,Auto,Auto,Auto" RowDefinitions="Auto,Auto">
                    <!-- Port Selection -->
                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Port:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <ComboBox Grid.Row="0" Grid.Column="1" 
                              ItemsSource="{Binding AvailablePorts}"
                              SelectedItem="{Binding SelectedPort}"
                              IsEnabled="{Binding !IsConnected}"
                              MinWidth="100" Margin="0,0,10,0"/>
                    
                    <Button Grid.Row="0" Grid.Column="2" 
                            Content="Refresh" 
                            Command="{Binding RefreshPortsCommand}"
                            IsEnabled="{Binding !IsConnected}"
                            Margin="0,0,10,0" Padding="15,5"/>
                    
                    <Button Grid.Row="0" Grid.Column="3" 
                            Content="Connect" 
                            Command="{Binding ConnectCommand}"
                            IsEnabled="{Binding !IsConnected}"
                            Margin="0,0,10,0" Padding="15,5"/>
                    
                    <Button Grid.Row="0" Grid.Column="4" 
                            Content="Disconnect" 
                            Command="{Binding DisconnectCommand}"
                            IsEnabled="{Binding IsConnected}"
                            Padding="15,5"/>
                    
                    <!-- Status -->
                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Status:" VerticalAlignment="Center" Margin="0,10,10,0"/>
                    <TextBlock Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="4"
                               Text="{Binding StatusMessage}" 
                               VerticalAlignment="Center" 
                               Margin="0,10,0,0"
                               FontWeight="Bold"
                               Foreground="{Binding IsConnected, Converter={x:Static vm:BoolToColorConverter.Instance}}"/>
                </Grid>
            </StackPanel>
        </Border>

        <!-- Tabs -->
        <TabControl Grid.Row="1">
            <!-- AT Terminal Tab -->
            <TabItem Header="AT Terminal">
                <Grid RowDefinitions="*,Auto">
                    <!-- Log -->
                    <Border Grid.Row="0" BorderBrush="LightGray" BorderThickness="1" Background="#F5F5F5" Margin="0,0,0,10">
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <ItemsControl ItemsSource="{Binding LogMessages}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding}" FontFamily="Consolas" FontSize="12" Margin="5,2"/>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </Border>
                    
                    <!-- Input -->
                    <Grid Grid.Row="1" ColumnDefinitions="*,Auto">
                        <TextBox Grid.Column="0" 
                                 Text="{Binding AtCommand}" 
                                 Watermark="Enter AT command..."
                                 IsEnabled="{Binding IsConnected}"
                                 Margin="0,0,10,0">
                            <TextBox.KeyBindings>
                                <KeyBinding Gesture="Enter" Command="{Binding SendAtCommandCommand}"/>
                            </TextBox.KeyBindings>
                        </TextBox>
                        <Button Grid.Column="1" 
                                Content="Send" 
                                Command="{Binding SendAtCommandCommand}"
                                IsEnabled="{Binding IsConnected}"
                                Padding="20,5"/>
                    </Grid>
                </Grid>
            </TabItem>
            
            <!-- WiFi Scan Tab -->
            <TabItem Header="WiFi Scan">
                <Grid RowDefinitions="Auto,Auto,*">
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                        <Button Content="Scan WiFi Networks" 
                                Command="{Binding WifiScanCommand}"
                                IsEnabled="{Binding IsConnected}"
                                Padding="20,10"
                                Margin="0,0,10,0"/>
                        <TextBlock Text="{Binding WifiScanStatus}" 
                                   VerticalAlignment="Center"
                                   FontWeight="Bold"/>
                    </StackPanel>
                    
                    <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,10">
                        <TextBlock Text="View:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <RadioButton Content="Table" IsChecked="{Binding IsTableView}" GroupName="ViewMode" Margin="0,0,15,0"/>
                        <RadioButton Content="Grid" IsChecked="{Binding IsGridView}" GroupName="ViewMode"/>
                    </StackPanel>
                    
                    <!-- Table View (TextBox) -->
                    <Border Grid.Row="2" 
                            BorderBrush="LightGray" 
                            BorderThickness="1" 
                            Background="#F5F5F5"
                            IsVisible="{Binding IsTableView}">
                        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                            <TextBox Text="{Binding WifiScanOutput}"
                                     IsReadOnly="True"
                                     FontFamily="Consolas"
                                     FontSize="12"
                                     Background="Transparent"
                                     BorderThickness="0"
                                     TextWrapping="NoWrap"
                                     AcceptsReturn="True"/>
                        </ScrollViewer>
                    </Border>
                    
                    <!-- Grid View (DataGrid) -->
                    <Border Grid.Row="2" 
                            BorderBrush="LightGray" 
                            BorderThickness="1" 
                            Background="White"
                            IsVisible="{Binding IsGridView}">
                        <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                            <DataGrid ItemsSource="{Binding WifiNetworks}"
                                      IsReadOnly="True"
                                      AutoGenerateColumns="True"
                                      GridLinesVisibility="All"
                                      BorderThickness="0"
                                      Background="White"
                                      MinHeight="200"
                                      CanUserReorderColumns="True"
                                      CanUserResizeColumns="True">
                            </DataGrid>
                        </ScrollViewer>
                    </Border>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
