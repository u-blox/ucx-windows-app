<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:UcxAvaloniaApp.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
        x:Class="UcxAvaloniaApp.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="UCX Avalonia Test App"
        Width="900" Height="650">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>

    <Grid RowDefinitions="Auto,*" Margin="10">
        <!-- Connection Panel -->
        <Border Grid.Row="0" BorderBrush="Gray" BorderThickness="1" CornerRadius="5" Padding="10" Margin="0,0,0,10">
            <StackPanel>
                <TextBlock Text="Connection" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>
                
                <Grid ColumnDefinitions="Auto,*,Auto,Auto,Auto" RowDefinitions="Auto,Auto">
                    <!-- Port Selection -->
                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Port:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <ComboBox Grid.Row="0" Grid.Column="1" 
                              ItemsSource="{Binding AvailablePorts}"
                              SelectedItem="{Binding SelectedPort}"
                              IsEnabled="{Binding !IsConnected}"
                              MinWidth="100" Margin="0,0,10,0"/>
                    
                    <Button Grid.Row="0" Grid.Column="2" 
                            Content="Refresh" 
                            Command="{Binding RefreshPortsCommand}"
                            IsEnabled="{Binding !IsConnected}"
                            Margin="0,0,10,0" Padding="15,5"/>
                    
                    <Button Grid.Row="0" Grid.Column="3" 
                            Content="Connect" 
                            Command="{Binding ConnectCommand}"
                            IsEnabled="{Binding !IsConnected}"
                            Margin="0,0,10,0" Padding="15,5"/>
                    
                    <Button Grid.Row="0" Grid.Column="4" 
                            Content="Disconnect" 
                            Command="{Binding DisconnectCommand}"
                            IsEnabled="{Binding IsConnected}"
                            Padding="15,5"/>
                    
                    <!-- Status -->
                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Status:" VerticalAlignment="Center" Margin="0,10,10,0"/>
                    <TextBlock Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="4"
                               Text="{Binding StatusMessage}" 
                               VerticalAlignment="Center" 
                               Margin="0,10,0,0"
                               FontWeight="Bold"
                               Foreground="{Binding IsConnected, Converter={x:Static vm:BoolToColorConverter.Instance}}"/>
                </Grid>
            </StackPanel>
        </Border>

        <!-- WiFi Control -->
        <Grid Grid.Row="1" RowDefinitions="Auto,Auto,*">
            <!-- Scan Section -->
            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                <Button Content="Scan WiFi Networks" 
                        Command="{Binding WifiScanCommand}"
                        IsEnabled="{Binding IsConnected}"
                        Padding="20,10"
                        Margin="0,0,10,0"/>
                <TextBlock Text="{Binding WifiScanStatus}" 
                           VerticalAlignment="Center"
                           FontWeight="Bold"/>
            </StackPanel>
            
            <!-- Connect Section -->
            <Border Grid.Row="1" BorderBrush="Gray" BorderThickness="1" Padding="10" Margin="0,0,0,10">
                <Grid ColumnDefinitions="Auto,*,Auto,Auto" RowDefinitions="Auto,Auto">
                    <TextBlock Grid.Row="0" Grid.Column="0" Text="SSID:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <TextBox Grid.Row="0" Grid.Column="1" 
                             Text="{Binding SelectedSsid}" 
                             Watermark="Enter network SSID..."
                             IsEnabled="{Binding IsConnected}"
                             Margin="0,0,10,0"/>
                    
                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Password:" VerticalAlignment="Center" Margin="0,5,10,0"/>
                    <TextBox Grid.Row="1" Grid.Column="1" 
                             Text="{Binding WifiPassword}" 
                             Watermark="Enter password (leave empty for open networks)..."
                             PasswordChar="â—"
                             IsEnabled="{Binding IsConnected}"
                             Margin="0,5,10,0"/>
                    
                    <Button Grid.Row="0" Grid.Column="2" 
                            Content="Connect" 
                            Command="{Binding WifiConnectCommand}"
                            IsEnabled="{Binding IsConnected}"
                            Padding="20,5"
                            Margin="0,0,10,0"/>
                    
                    <Button Grid.Row="0" Grid.Column="3" 
                            Content="Disconnect" 
                            Command="{Binding WifiDisconnectCommand}"
                            IsEnabled="{Binding IsConnected}"
                            Padding="20,5"/>
                    
                    <TextBlock Grid.Row="1" Grid.Column="2" Grid.ColumnSpan="2"
                               Text="{Binding WifiConnectStatus}" 
                               VerticalAlignment="Center"
                               FontWeight="Bold"
                               Margin="0,5,0,0"/>
                </Grid>
            </Border>
            
            <!-- Scan Results -->
            <Border Grid.Row="2" 
                    BorderBrush="LightGray" 
                    BorderThickness="1" 
                    Background="Black">
                <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                    <SelectableTextBlock Text="{Binding WifiScanOutput}"
                                         FontFamily="Consolas"
                                         FontSize="12"
                                         Foreground="White"
                                         Background="Transparent"
                                         Padding="5"
                                         TextWrapping="NoWrap"/>
                </ScrollViewer>
            </Border>
        </Grid>
    </Grid>
</Window>
